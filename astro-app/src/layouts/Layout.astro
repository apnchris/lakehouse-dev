---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// https://docs.astro.build/en/guides/view-transitions/
import { ViewTransitions } from 'astro:transitions';
import '../styles/variables.css';
import '../styles/global.css';
import '../styles/main.css';

interface Props {
  title: string;
  pageSlug?: string;
  backgroundColor?: string;
}

const { title, pageSlug, backgroundColor } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-bg-color={backgroundColor || 'white'}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body data-page={pageSlug || 'home'}>
    <div class="container">
      
      <Header />

      <main>
        <slot />
      </main>
      
      <Footer />
      
    </div>
  </body>
</html>
