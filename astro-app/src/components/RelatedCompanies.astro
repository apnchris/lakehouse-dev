---
import { urlFor } from '../utils/image';

interface RelatedCompany {
  _id: string;
  name: string;
  slug: { current: string };
  thumbnailImage?: any;
  mainImage?: any;
  investmentStage?: string;
}

interface Props {
  relatedCompanies: RelatedCompany[];
}

const { relatedCompanies } = Astro.props;

const companyCount = relatedCompanies?.length || 0;
const formattedCount = companyCount.toString().padStart(2, '0');
---

{relatedCompanies && relatedCompanies.length > 0 && (
  <div class="related-companies-section">
    <div class="related-section-header regular-grid">
      <div class="portfolio-count sans">{formattedCount}</div>
      <div class="section-title">Related</div>
      <div class="section-link">
        <a href="/portfolio">View all</a>
      </div>
    </div>

    <div class="related-companies-grid">
      {relatedCompanies.map((company) => (
        <a href={`/portfolio/${company.slug.current}`} class="related-company-card back-hover">
          {company.thumbnailImage && (
            <div class="related-company-image">
              <img 
                src={urlFor(company.thumbnailImage).width(1200).height(1200).quality(100).fit('max').url()} 
                alt={company.thumbnailImage.alt || company.name}
              />
            </div>
          )}
          <div class="related-company-info">
            <h3>{company.name}</h3>

            {company.investmentStage && (
              <span class="sans uppercase">{company.investmentStage}</span>
            )}

            <span class="hover-arrow">â†’</span>
          </div>
        </a>
      ))}
    </div>
  </div>
)}

<style>
  .related-companies-section {
    padding: 0 var(--gap);
    margin-bottom: 128px;
  }

  .related-companies-grid {
    display: flex;
    gap: var(--gap);
  }

  .related-company-card {
    grid-column: span 2;
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding-bottom: 4px;
  }

  .related-company-image {
    line-height: 0;
  }

  .related-company-card img {
    width: 100%;
  }

  .related-company-info {
    display: flex;
    gap: 8px;
    position: relative;
  }

  @media screen and (max-width: 820px) {
    .related-companies-section {
      margin-bottom: 72px;
    }

    .related-section-header {
      display: flex;
    }

    .related-section-header .section-link {
      width: calc(50vw - (var(--gap) * 1.5));
      order: 3;
    }

    .related-section-header .section-title {
      order: 1;
    }

    .related-section-header .portfolio-count {
      order: 2;
      flex: 1;
      transform: translateX(-4px);
    }

    .related-companies-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      row-gap: 24px;
    }

    .related-company-card {
      grid-column: span 1;
    }

    .related-company-info {
      flex-direction: column-reverse;
    }

    .related-company-info .sans {
      padding: 0;
    }
  }
</style>
