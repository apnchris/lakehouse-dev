---
import { urlFor } from '../utils/image';

interface Props {
  mainImage: any;
}

const { mainImage } = Astro.props;
---

{mainImage && (
  <div class="fullscreen-image">
    <img 
      src={urlFor(mainImage).width(2400).height(1600).url()} 
      alt={mainImage.alt || ''}
    />
    {mainImage.caption && (
      <span class="fullscreen-caption sans">{mainImage.caption}</span>
    )}
  </div>
)}

<style>
  .fullscreen-image {
    width: 100%;
    height: 100dvh;
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .fullscreen-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .fullscreen-caption {
    position: absolute;
    bottom: 24px;
    left: 24px;
    background: rgba(255, 255, 255, 0.9);
    padding: 8px 16px;
    font-size: 0.875rem;
  }
</style>
